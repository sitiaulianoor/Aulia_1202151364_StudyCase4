<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="14dp"
    android:layout_gravity="center"
    tools:context="com.example.aulia_1202151364_studycase4.ImageAsyntask">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cari_gambar"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/edit_url"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:inputType="" />

            <Button
                android:id="@+id/cari_image"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="Cari"
                android:text="@string/klik_untuk_mencari_gambar"/>

            <ImageView
                android:id="@+id/image_url"
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
